{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block head_style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/admincore/css/icheck/minimal/grey.css') }}" />
{% endblock head_style %}

{% block content_title %}
    {{ 'admin_'~class~'_list'|trans({}, 'admin') }}
{% endblock content_title %}

{% block btn_group %}
    <a href="{{ url("qbh_admin_"~class~"_new") }}" class="btn btn-inverse"><i class="fa fa-plus"></i> {{ "new_item"|trans({}, 'admin') }}</a>
{% endblock btn_group %}

{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            ("admin_"~class~"_list"|trans({}, 'admin')): {
                "active" : true
            }
        }
    } %}
{% endblock breadcrumb %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="row-fluid">
                {{ render(url("qbh_admin_component_"~class~"component_listcomponent", {
                    'page': page,
                    'limit': limit,
                    'orderByField': orderByField,
                    'orderByDirection': orderByDirection
                })) }}
            </div>
        </div>
    </div>
{% endblock content %}

{% block foot_script %}
    {{ parent() }}
    <script src="{{ asset('bundles/admincore/js/unicorn.list.js') }}" type="text/javascript"></script>
{% endblock foot_script %}
